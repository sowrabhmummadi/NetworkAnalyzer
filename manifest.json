{
    "name": "Chrome webrequest test",
    "version": "0.1",
    "description": "A test for webrequest",
    "manifest_version": 2,
    "permissions": [
    "<all_urls>", "webRequest", "webRequestBlocking", "tabs"
  ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}